{
	"bracketSameLine": true,
	"bracketSpacing": true,
	"plugins": ["prettier-plugin-packagejson"],
	"printWidth": 180,
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"excludeFiles": ["package.json"],
			"files": ["*.json", "*.code-workspace"],
			"options": {
				"jsonRecursiveSort": true,
				"parser": "json-stringify",
				"plugins": ["prettier-plugin-sort-json"]
			}
		}
	]
}
